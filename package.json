{
    "name": "ghost-theme-am",
    "description": "Ghost theme for alexmathews.blog, modified from TryGhost/Dawn",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Alex Mathews",
        "email": "96121253+alexgmathews@users.noreply.github.com",
        "url": "https://alexmathews.blog"
    },
	"config": {
        "posts_per_page": 50,
        "image_sizes": {
            "s": {
                "width": 400
            },
            "m": {
                "width": 750
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1140
            }
        },
        "card_assets": false,
        "custom": {
            "navigation_layout": {
                "type": "select",
                "options": ["Logo on the left", "Logo in the middle", "Stacked"],
                "default": "Logo on the left"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.5.0",
        "autoprefixer": "10.4.21",
        "beeper": "2.1.0",
        "cssnano": "7.0.7",
        "gscan": "4.48.1",
        "gulp": "5.0.0",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "ordered-read-streams": "2.0.0",
        "postcss": "8.5.3",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.2"
    }
}
